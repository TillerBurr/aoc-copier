[project]


name = "{{ project_slug }}"
version = "0.1.0"
description = "Advent of Code Solutions for {{year}}"
authors = [{ name = "{{name}}", email = "{{email}}" }]
{% if github_username %}
repository = "https://github.com/{{ github_username }}/{{ project_slug }}"
{% endif %}
dependencies = [
    "httpx>=0.24.1",
    "rich>=13.5.2",
    "pytest>=7.4.0",
    "pre-commit>=3.3.3",
    "typer>=0.9.0",
    "sh>=1.14.3",
]
readme = "README.md"
requires-python = ">= 3.8"

classifiers = ["Private :: Do Not Upload"]

[project.scripts]
{{ project_slug }}= '{{ package_name }}.cli:app'

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.rye]
managed = true
dev-dependencies = []

[tool.hatch.metadata]
allow-direct-references = true
